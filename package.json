{
  "name": "vicsam-group-server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "npm --prefix client run build:fast",
    "build:bash": "./build.sh",
    "build:ps": "powershell -ExecutionPolicy Bypass -File ./build.ps1",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force client/dist -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "axios": "^1.10.0",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "shadcn-ui": "^0.9.5",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/__tests__/helpers.js"
    ]
  }
}
